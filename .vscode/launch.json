{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch Files",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm --filter gruvvy-watermelon watch"
        },
        {
            "name": "Debug Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/*.js"
            ]
        },
    ],
    "compounds": [
        {
            "name": "Debug & Watch Files",
            "configurations": [
                "Watch Files",
                "Debug Extension"
            ],
            "stopAll": true
    }
    ]
}